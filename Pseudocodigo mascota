CLASE Mascota
    ATRIBUTOS PRIVADOS:
        nombre : texto
        edad : entero
        tipo : texto
        sonido : texto

    MÉTODO Constructor(nombre, edad, tipo, sonido)
        Asignar atributos

    MÉTODO MostrarInformacion()
        Imprimir nombre, edad, tipo

    MÉTODO EmitirSonido()
        Imprimir nombre + sonido

    MÉTODO SetEdad(nuevaEdad)
        edad = nuevaEdad

    MÉTODO GetEdad()
        Retornar edad

    MÉTODO CalcularEdadHumana()
        SI tipo es "perro" o "gato"
            Retornar edad * 7
        SI tipo es "ajolote"
            Retornar edad * 3
        SINO
            Retornar edad
FIN CLASE

CLASE Principal
    MÉTODO Main()
        Crear mascota1: "Luka", 4, "perro", "guau"
        Crear mascota2: "Mele", 2, "gato", "miau"
        Crear mascota3: "Axel", 1, "ajolote", "blub blub"

        // Mascota 1
        Mostrar info y sonido
        Imprimir edad humana
        Cambiar edad a 5
        Mostrar nueva edad y edad humana

        // Mascota 2
        Mostrar info y sonido
        Imprimir edad humana
        Cambiar edad a 3
        Mostrar nueva edad y edad humana

        // Mascota 3
        Mostrar info y sonido
        Imprimir edad humana
        Cambiar edad a 2
        Mostrar nueva edad y edad humana
FIN MÉTODO
